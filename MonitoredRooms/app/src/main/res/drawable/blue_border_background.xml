<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!--top rectangle, it is used for the border color-->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/light_blue"/>
        </shape>
    </item>

    <!--this rectangle is 2dp smaller at the edges, this will like this rectangle as a border
        that is the same color as the rectangle from above-->
    <item android:left="2dp" android:right="2dp" android:bottom="2dp" android:top="2dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/white"/>
        </shape>
    </item>

</layer-list>